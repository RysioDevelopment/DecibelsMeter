<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/start_time"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/actionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerTextView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="16sp"
        tools:text="recording" />

    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionTextView"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/recordingButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@color/recording_button_selector" />

        <ImageButton
            android:id="@+id/playButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@color/play_button_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionButtonsLayout"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.ntt.customgaugeview.library.GaugeView
            android:id="@+id/gaugeView"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:divisions="8"
            app:innerCircleColor="@color/colorLightBlue"
            app:outerCircleColor="@color/colorRed"
            app:rangeValues="@array/decibelsRangeValues"
            app:scaleEndValue="100"
            app:showInnerRim="false"
            app:showNeedle="true"
            app:showOuterBorder="false"
            app:showOuterRim="true"
            app:showOuterShadow="false"
            app:showRangeText="true"
            app:showRanges="true"
            app:textUnitColor="@color/colorPrimaryDark"
            app:showScale="true"
            app:subdivisions="1"
            app:textUnit="[dB]"
            app:textUnitSize="0.06"
            app:textValueSize="0.15" />
        <!--
            <TextView
                android:id="@+id/decibelsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/actionButtonsLayout"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                tools:text="55 [dB]" />-->

        <TextView
            android:id="@+id/dBInterpretationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gaugeView"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:text="Perfect distance!" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="optimize" />

        <ImageButton
            android:id="@+id/increaseDecibelsButton"
            style="@style/OptionButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_add" />

        <ImageButton
            android:id="@+id/lowerDecibelsButton"
            style="@style/OptionButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_remove" />
    </LinearLayout>

</RelativeLayout>