<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/recordNameEditText"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/speakerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recordingButton"
        android:layout_alignEnd="@+id/recordingButton"
        android:layout_marginTop="20dp"
        android:gravity="center"
        tools:text="@string/left_speaker" />

    <ImageButton
        android:id="@+id/recordingButton"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/speakerTextView"
        android:background="?android:selectableItemBackgroundBorderless"
        android:src="@color/recording_button_selector" />

    <Button
        android:id="@+id/saveButton"
        style="@style/SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordingButton"
        android:enabled="false"
        android:text="@string/save" />
</RelativeLayout>